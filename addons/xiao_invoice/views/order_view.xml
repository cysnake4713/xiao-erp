<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_sale_order_invoice_inherit_form" model="ir.ui.view">
            <field name="name">view.sale.order.invoice.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//page[@string='Other Information']" position="before">
                    <page string="待开发票信息">
                        <group>
                            <field name="invoice_company_name"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</openerp>