<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="group_xiao_expense_user" model="res.groups">
            <field name="name">用户</field>
            <field name="category_id" ref="base.module_category_xiao_expense"/>
        </record>
        <record id="group_xiao_expense_manager" model="res.groups">
            <field name="name">经理</field>
            <field name="category_id" ref="base.module_category_xiao_expense"/>
            <field name="implied_ids" eval="[(4, ref('xiao_expense.group_xiao_expense_user'))]"/>
        </record>

        <record id="rule_xiao_expense_user" model="ir.rule">
            <field name="name">普通用户只能看到自己的报销</field>
            <field name="model_id" ref="model_xiao_expense"/>
            <field name="domain_force">[('user_id', '=',user.id)]</field>
            <field name="groups" eval="[(6,0,[ref('xiao_expense.group_xiao_expense_user')])]"/>
        </record>
        <record id="rule_xiao_expense_manager" model="ir.rule">
            <field name="name">经理可以看到所有的报销</field>
            <field name="model_id" ref="model_xiao_expense"/>
            <field name="domain_force">[(1,'=',1)]</field>
            <field name="groups" eval="[(6,0,[ref('xiao_expense.group_xiao_expense_manager')])]"/>
        </record>
    </data>
</openerp>