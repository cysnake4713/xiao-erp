<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data noupdate="1">
        <record id="map_sale_order" model="odoosoft.wechat.enterprise.map">
            <field name="code">wechat.sale_order</field>
        </record>

        <record id="message_sale_order" model="odoosoft.wechat.enterprise.message.template">
            <field name="code">wechat.sale.order</field>
            <field name="name">销售订单</field>
            <field name="title">销售订单创建&amp;变更</field>
            <field name="content">
编号: ${object.name or ''}
状态: ${fields['state'].convert_to_export(object.state, env)}
客户: ${object.partner_id.id or ''}
订单日期: ${object.date_order or ''}
已经支付: ${object.invoiced or ''}
合计: ${object.amount_total}

            </field>
        </record>
    </data>
</openerp>