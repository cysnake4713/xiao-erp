<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_xiao_claim_good_tree" model="ir.ui.view">
            <field name="name">view.xiao.claim.tree</field>
            <field name="model">xiao.claim</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="order"/>
                    <field name="carrier_id"/>
                    <field name="carrier_tracking_ref"/>
                    <field name="state" autocolor="1"/>
                </tree>
            </field>
        </record>

        <record id="view_xiao_claim_good_form" model="ir.ui.view">
            <field name="name">view.xiao.claim.form</field>
            <field name="model">xiao.claim</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <group string="申诉信息">
                            <group>
                                <field name="order"/>
                                <field name="partner_id"/>
                                <field name="user_id"/>
                            </group>
                            <group>
                                <field name="carrier_id"/>
                                <field name="carrier_tracking_ref"/>
                            </group>
                        </group>
                        <group string="问题描述">
                            <field name="description" nolabel="1"/>
                        </group>
                        <group string="退换货信息">
                            <field name="new_carrier_id"/>
                            <field name="new_carrier_tracking_ref"/>
                        </group>
                        <group string="处理结果">
                            <field name="response_description" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</openerp>