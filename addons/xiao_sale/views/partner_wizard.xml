<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="res_partner_wizard_login_form" model="ir.ui.view">
            <field name="name">view.res.partner.wizard.login.form</field>
            <field name="model">res.partner.wizard.login</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="login"/>
                            <field name="password" password="True"/>
                            <field name="password_confirm" password="True"/>
                        </group>
                    </sheet>
                    <footer>
                        <button string="确认" name="button_change_login" type="object" class="oe_highlight"/>
                        或
                        <button string="取消" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</openerp>