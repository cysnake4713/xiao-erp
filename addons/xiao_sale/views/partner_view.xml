<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_res_partner_limit_inherit_form" model="ir.ui.view">
            <field name="name">view.res.partner.limit.inherit.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet" position="before">
                    <header>
                        <button string="激活用户" name="button_validated_partner" type="object" class="oe_highlight" states="draft,locked"/>
                        <button string="锁定用户" name="button_locked_partner" type="object" states="draft,validated"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                </xpath>
                <xpath expr="//div[@name='buttons']" position="inside">
                    <button name="button_credit_left_list" type="object" class="oe_stat_button" icon="fa-list">
                        <div>
                            <strong>
                                <field name="credit_left" widget="monetary"/>
                            </strong>
                            <br/>剩余额度
                        </div>
                    </button>
                </xpath>
                <field name="website" position="after">
                    <field name="sale_limit"/>
                </field>
                <field name="email" position="after">
                    <field name="qq"/>
                </field>
                <xpath expr="//page[@name='sales_purchases']" position="after">
                    <page string="营业执照" attrs="{'invisible': [('is_company','=',False)]}">
                        <field name="business_lesson" widget="image"/>
                    </page>
                    <page string="绑定信息" attrs="{'invisible': [('is_company','=',False)]}">
                        <group>
                            <field name="tianv_id" readonly="1"/>
                        </group>
                    </page>
                </xpath>
                <field name="credit_limit" position="replace"/>
            </field>
        </record>

        <record id="action_partner_form_company" model="ir.actions.act_window">
            <field name="name">公司信息</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_customer":1,'default_is_company':1}</field>
            <field name="domain">[('is_company','=',True)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
        </record>

        <record id="action_partner_form_contract" model="ir.actions.act_window">
            <field name="name">联系人信息</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="context">{"search_default_customer":1}</field>
            <field name="domain">[('is_company','=',False)]</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
        </record>

        <menuitem id="base.menu_partner_form" name="公司信息" parent="base.menu_sales" action="action_partner_form_company" sequence="3"/>
        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="menuitem_partner_contract" name="联系人信息" parent="base.menu_sales" action="action_partner_form_contract" sequence="3"/>
    </data>
</openerp>